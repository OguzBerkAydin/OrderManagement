		<script type="text/javascript">
			$(document).ready(() => {
				var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7187/SignalRHub").build();
				$("#connstatus").text(connection.state);

				connection.start().then(() => {
					$("#connstatus").text(connection.state);
					setInterval(() => {
						connection.invoke("SendCategoryCount");
						connection.invoke("SendProductCount");
						connection.invoke("SendActiveCategoryCount");
						connection.invoke("SendPassiveCategoryCount");
						connection.invoke("SendDrinkCount");
						connection.invoke("SendDessertCount");
						connection.invoke("SendProductPriceAvg");
						connection.invoke("SendMostExpensiveProduct");
						connection.invoke("SendCheapestProduct");

					}, 1000);

				}).catch((err) => { console.log(err) });

				connection.on("ReceiveCategoryCount", (value) => {
					$("#categorycount").text(value);
				});
				connection.on("ReceiveProductCount", (value) => {
					$("#productcount").text(value);
				});
				connection.on("ReceiveActiveCategoryCount", (value) => {
					$("#activecategorycount").text(value);
				});
				connection.on("ReceivePassiveCategoryCount", (value) => {
					$("#passivecategorycount").text(value);
				});
				connection.on("ReceiveDrinkCount", (value) => {
					$("#drinkcount").text(value);
				});
				connection.on("ReceiveDessertCount", (value) => {
					$("#dessertcount").text(value);
				});
				connection.on("ReceiveProductPriceAvg", (value) => {
					$("#productpriceavg").text(value);
				});
				connection.on("ReceiveMostExpensiveProduct", (value) => {
					$("#mostexpensiveproduct").text(value);
				});
				connection.on("ReceiveCheapestProduct", (value) => {
					$("#cheapestproduct").text(value);
				});

			});
		</script>
