@model UpdateProductDto

@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">


					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Güncelleme sayfası</div>
						</div>
						<input type="hiiden" asp-for="ProductId" />
						<div class="card-body">
							<div class="form-group">
								<label for="productname">Ürün Adını Girin</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productname" placeholder="Enter Email">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="price">Ürün Fiyatını Girin</label>
								<input type="text" class="form-control" asp-for="Price" id="price" placeholder="Enter Email">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Ürün görselini Girin</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl" placeholder="Enter Email">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="productname">Ürün Kategorisini  Seçiniz</label>
								@Html.DropDownListFor(x => x.CategoryId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Ürün Açıklaması Girin</label>
								<input type="text" class="form-control" asp-for="Description" id="description" placeholder="Enter Email">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürünü Güncelle</button>

						</div>
					</div>


				</form>
			</div>


		</div>
	</div>
</div>



